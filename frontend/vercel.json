{
  "name": "pbl4-chat-app",
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "VITE_BACKEND_URL": "https://pbl4-jecm.onrender.com/api",
    "VITE_SOCKET_URL": "https://pbl4-jecm.onrender.com"
  }
}
